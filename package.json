{
  "name": "semgrep",
  "displayName": "Semgrep",
  "description": "Shows findings from https://semgrep.dev",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "lint",
    "linter",
    "validation",
    "check",
    "semgrep"
  ],
  "activationEvents": [
    "*"
  ],
  "publisher": "Semgrep",
  "repository": "https://github.com/returntocorp/semgrep-vscode",
  "icon": "semgrep-icon.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "qna": "https://r2c.dev/slack",
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "semgrep-explorer",
          "title": "Semgrep Explorer",
          "icon": "semgrep-icon.png"
        }
      ]
    },
    "views": {
      "semgrep-explorer": [
        {
          "id": "semgrepTreeView",
          "name": "Results"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "semgrepTreeView",
        "contents": "[Search Pattern](command:semgrep.searchPattern)"
      }
    ],
    "commands": [
      {
        "command": "semgrep.suggestSelectionPatterns",
        "title": "Suggest Semgrep Patterns for Selection",
        "enablement": "editorHasSelection"
      },
      {
        "command": "semgrep.suggestLinePatterns",
        "title": "Suggest Semgrep Patterns for Line"
      },
      {
        "command": "semgrep.searchPattern",
        "title": "Search Semgrep Pattern"
      },
      {
        "command": "semgrep.deleteEntry",
        "title": "Delete Finding in Semgrep",
        "icon": "$(close)"
      }
    ],
    "configuration": {
      "title": "Semgrep",
      "properties": {
        "semgrep.languages": {
          "type": "array",
          "default": [
            "c",
            "go",
            "java",
            "javascript",
            "javascriptreact",
            "json",
            "ocaml",
            "python",
            "ruby"
          ],
          "description": "Languages to scan with semgrep. Defaults to all supported languages."
        },
        "semgrep.rules": {
          "type": "string",
          "default": "https://semgrep.dev/p/r2c",
          "description": "The semgrep --config value to scan with."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "semgrep.searchPattern",
          "when": "view == semgrepTreeView"
        }
      ],
      "view/item/context": [
        {
          "command": "semgrep.deleteEntry",
          "when": "view == semgrepTreeView && viewItem == finding",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
            "command": "semgrep.deleteEntry",
            "when": "false"
        }
    ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.31.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.1",
    "typescript": "^3.9.7",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.7",
    "node-fetch": "^2.6.0"
  }
}
