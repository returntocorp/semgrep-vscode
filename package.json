{
  "name": "semgrep",
  "displayName": "Semgrep",
  "description": "Shows findings from https://semgrep.dev",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "lint",
    "linter",
    "validation",
    "check",
    "semgrep"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:go",
    "onLanguage:java",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:json",
    "onLanguage:ocaml",
    "onLanguage:php",
    "onLanguage:python",
    "onLanguage:ruby",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "publisher": "Semgrep",
  "repository": "https://github.com/returntocorp/semgrep-vscode",
  "icon": "semgrep-icon.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "qna": "https://r2c.dev/slack",
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "semgrep.suggestSelectionPatterns",
        "title": "Suggest Semgrep Patterns for Selection",
        "enablement": "editorHasSelection"
      },
      {
        "command": "semgrep.suggestLinePatterns",
        "title": "Suggest Semgrep Patterns for Line"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Semgrep",
      "properties": {
        "semgrep.languages": {
          "scope": "window",
          "type": "array",
          "default": [
            "c",
            "go",
            "java",
            "javascript",
            "javascriptreact",
            "json",
            "ocaml",
            "php",
            "python",
            "ruby",
            "typescript",
            "typescriptreact"
          ],
          "description": "Languages to scan with semgrep. Defaults to all supported languages."
        },
        "semgrep.rules": {
          "scope": "window",
          "type": "string",
          "default": "https://semgrep.dev/p/r2c",
          "description": "The semgrep --config value to scan with."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.1",
    "typescript": "^3.9.7"
  }
}
